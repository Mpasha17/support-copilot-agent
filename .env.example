# Support Copilot Environment Configuration
# Copy this file to .env and update with your actual values

# Application Environment
FLASK_ENV=development
DEBUG=True
SECRET_KEY=your-secret-key-change-in-production

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=support_user
DB_PASSWORD=support_password
DB_NAME=support_copilot

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=1000

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key
JWT_EXPIRY_HOURS=24

# AWS Configuration (for production deployment)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET=support-copilot-files

# Performance Settings
MAX_RESPONSE_TIME_SECONDS=15
RATE_LIMIT_PER_MINUTE=100

# Logging Configuration
LOG_LEVEL=INFO
LOG_DIR=logs

# Cache Settings
CACHE_DEFAULT_TIMEOUT=3600
CACHE_CUSTOMER_TIMEOUT=300
CACHE_ISSUE_TIMEOUT=1800

# Email Configuration (for notifications)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@company.com
MAIL_PASSWORD=your-email-password

# Monitoring Configuration
ENABLE_METRICS=True
METRICS_PORT=8080

# Security Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
ALLOWED_HOSTS=localhost,127.0.0.1

# Feature Flags
ENABLE_AI_ANALYSIS=True
ENABLE_SIMILARITY_SEARCH=True
ENABLE_AUTO_SUMMARIZATION=True

# Development Settings (only for development)
DEV_SKIP_AUTH=False
DEV_MOCK_AI=False
DEV_SEED_DATA=True